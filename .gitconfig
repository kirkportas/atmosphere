[user]
  name = Kirk Portas
  email = kirk@attoconsulting.com

[merge]
  tool = vimdiff

[core]
    excludesfile = ~/.gitignore
    editor = subli

[color]
    ui = always

[alias]
    st = status
    ci = commit
    br = branch
    co = checkout
    df = diff
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    who = shortlog -s --
[heroku]
[push]
  default = simple